@using BlogSampleV2.WebUI.Models
@model ArticlesViewModel

@{
    ViewBag.Title = "Articles";
}

<h2>Articles</h2>

@foreach (var article in @Model.Articles)
{
    <div class="post">
        <h3>@article.Title</h3>
            <article>@article.Text</article>
        <p>Posted by <strong>@((article.Author.Nick) ?? (article.Author.FirstName + " " + article.Author.LastName))</strong> @article.PostedDate.ToShortDateString()</p>
    </div>
}
<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Articles", new { page = x }))
</div>
